<% include ../partials/header %>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Password</th>
            <th><a class="btn btn-secondary" href="/addnewuser" role="button">NewUser</a></th>
        </tr>
    </thead>
    <tbody id="myTable">
        <% users.forEach(function(user) { %>
        <tr>
            <td scope="row"><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
            <td><a class="btn btn-warning" href="/products/<%= product.id %>" role="button">Edit</a>
                <a name="" id=""  class="btn btn-danger" href="/product_delete/<%= product.id %>" role="button">DELETE</a>
            </td>
        </tr>
        <% }); %>
        
        <tr>
            <td scope="row"></td>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>

<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});





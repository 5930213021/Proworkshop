<% include ../partials/header %>
<h1 class="display-12">PRODUCT</h1>
<div class="container">
  <h2>Filterable Table</h2>
  <p>Type something in the input field to search the table for first names, last names or emails:</p>  
  <input class="form-control" id="myInput" type="text" placeholder="Search..">
  <br> <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button> 
</div>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Password</th>
            <th><a class="btn btn-secondary" href="/addnewuser" role="button">NewUser</a></th>
        </tr>
    </thead>
    <tbody id="myTable">
        <% users.forEach(function(user) { %>
        <tr>
            <td scope="row"><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
            <td><a class="btn btn-warning" href="/users/<%= user.id %>" role="button">Edit</a>
                <a name="" id=""  class="btn btn-danger" href="/user_delete/<%= user.id %>" role="button">DELETE</a>
            </td>
        </tr>
        <% }); %>
        
        <tr>
            <td scope="row"></td>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>

<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>





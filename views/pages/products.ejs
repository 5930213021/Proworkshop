<% include ../partials/header %>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th><a class="btn btn-secondary" href="/addnewpro" role="button">NewProduct</a></th>
        </tr>
    </thead>
    <tbody>
     <tbody id="myTable">
        <% products.forEach(function(product) { %>
        <tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td><a class="btn btn-warning" href="/products/<%= product.id %>" role="button">Edit</a>
                <a name="" id=""  class="btn btn-danger" href="/product_delete/<%= product.id %>" role="button">DELETE</a>
            </td>
        </tr>
        <% }); %>
        
        <tr>
            <td scope="row"></td>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>

<script>
$(document)
  });.ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
});
</script>




